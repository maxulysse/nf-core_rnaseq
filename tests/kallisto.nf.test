nextflow_pipeline {

    name "Test pipeline with Kallisto, skipping both QC and alignment"
    script "../main.nf"

    test("Params: --pseudo_aligner kallisto --skip_qc --skip_alignment") {

        when {
            params {
                outdir = "$outputDir"
                pseudo_aligner = 'kallisto'
                skip_qc = true
                skip_alignment = true
            }
        }

        then {
            assert workflow.success
        }
    }
}
